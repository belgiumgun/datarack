<div class="well well-lg" id="edit_content">
    
   
  <%=form_for @resume,:url=>"/candidate/details_update", :html => { :multipart => true } do |form|%>
                        <div class="form-group">
                          <%=form.hidden_field(:id)%>
                        <%= form.label :name,:class=>"control-label"%>    
                        <%= form.text_field :candidate_name, :class=>"form-control",:type=>"text", :placeholder=>"Enter name with spaces; ex:Van Helsing / Sri rama krishna murthi "%>
                     <%= label "label","Email",:class=>"control-label"%>    
                    <%= form.email_field :email, :class=>"form-control",:type=>"email",:placeholder=>"Ex:steve@rrootshell.com"%>
                    <%= label "label","Phone Number",:class=>"control-label"%>    
                    <%= form.telephone_field :phone, :class=>"form-control",:type=>"text",:placeholder=>"If you have multiple phone numbers sperate them by space,Ex:+91994915234 +1502349835"%>
                    <%= form.label :skills,:class=>"control-label"%>    
                        <%= form.text_field :skills, :class=>"form-control",:type=>"text",:placeholder=>"Enter skills seperated by space; Ex: Java / Java Oracle SQL MYSQL"%>
                    </div>
       
                   <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
                            <%= form.label :martial_status,:class=>"control-label"%>    
                            <%= form.text_field :martial_status, :class=>"form-control",:type=>"text",:placeholder=>"Single / Married / Commited"%>
                            </div>
                          <div class="col-md-6">
                            <%= form.label :current_status,:class=>"control-label"%>    
                            <%= form.text_field :current_status, :class=>"form-control",:type=>"text",:placeholder=>"Bench/Project allocated/Hired..etc"%>
                          </div>
                         </div>
                       </div>  
                      
               <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
                            <%= form.label :visa_status,:class=>"control-label"%>    
                            <%= form.text_field :visa_status, :class=>"form-control",:type=>"text",:placeholder=>"H1B Stamped / B1 / H1B Awaiting for stamping..etc"%>
                          </div>
                         <div class="col-md-6">
                            <%= form.label :Visa_employer,:class=>"control-label"%>    
                           <%= form.text_field :visa_emp, :class=>"form-control",:type=>"text",:placeholder=>"EMC/HP..etc"%>
                          </div>
                         </div>
                       </div>  
                      
                       <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
                            <%= form.label :location,:class=>"control-label"%>    
                            <%= form.text_field :location, :class=>"form-control",:type=>"text",:placeholder=>"Current city; ex:Hyderabad India,Newyork USA"%>
                            </div>
                          <div class="col-md-6">
                            <%= form.label :relocation,:class=>"control-label"%>    
                            <%= form.text_field :relocation, :class=>"form-control",:type=>"text",:placeholder=>"Yes /No / Need to discuss again"%>
                          </div>
                         </div>
                       </div>  
                    <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
                             <%= form.label :overall_experience ,:class=>"control-label"%>    
                            <%= form.text_field :overall_experience, :class=>"form-control",:type=>"text",:placeholder=>"Overall exp; ex: 2years 3months / 10years /5years 4months"%>
                          </div>
                          <div class="col-md-6">
                            <%= form.label :relevant_experience,:class=>"control-label"%>    
                            <%= form.text_field :relevant_experience, :class=>"form-control",:type=>"text",:placeholder=>"Relavent technology exp; ex: 2years 3months / 10years /5years 4months"%>
                            </div>
                         </div>
                       </div>  
   <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
                 
                            <%= form.label :current_ctc,:class=>"control-label"%>    
                            <%= form.text_field :current_ctc, :class=>"form-control",:type=>"text",:placeholder=>"5.6LPA / 8LPA / $67PH "%>
                          </div>
                          <div class="col-md-6">
                    <%= form.label :expected_ctc,:class=>"control-label"%>    
                    <%= form.text_field :expected_ctc, :class=>"form-control",:type=>"text",:placeholder=>"5.6LPA / 8LPA / $67PH "%>
                          </div>
                         </div>
                       </div>  
   <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
               
                            <%= form.label "Notice period",:class=>"control-label"%>    
                    <%= form.text_field :notice_period, :class=>"form-control",:type=>"text",:placeholder=>"2months / Immediately Available"%>
                          </div>
                          <div class="col-md-6">
                    <%= form.label :availablity,:class=>"control-label"%>    
                            <%= form.text_field :availablity, :class=>"form-control",:type=>"text",:placeholder=>"Available timings to call;. ex: afternoon / after 6PM "%>
                          </div>
                         </div>
                       </div>  
               <div class="form-group">
                        <div class="row">
                          <div class="col-md-6">
                     <%= form.label :remarks,:class=>"control-label"%>    
                            <%= form.text_field :remarks, :class=>"form-control",:type=>"text",:placeholder=>"Good at technical/bad communicaton skills"%>
                          </div>
                          <div class="col-md-6">
                    <%= form.label :source,:class=>"control-label"%>    
                            <%= form.text_field :source, :class=>"form-control",:type=>"text",:placeholder=>"Naukari/Personal reference"%>
                               </div>
                         </div>
                       </div>  
                    <div class="form-group">
                     <%= form.label "Resume Upload(Please make sure that you uploading proper file)**",:class=>"control-label"%>    
                    <%= fields_for @filerack do|r|%>
                    <%= r.file_field :datafile%>
                    <%end%>      
                    </div>
                    <div class="form-group">
                           <input  type="submit" class="btn btn-success btn-lg btn-block" value="submit profile">
                        </div>             
              <%end%>
           </div>
 