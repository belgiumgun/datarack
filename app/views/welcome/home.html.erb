<div class="row">
  <!-- Side bar End-->              
   <!-- Well- starting!-->
   <div class="col-md-12">
     <div class="well well-lg" id="data_well"> 
       <div class="row">
         <div class="panel panel-info">
           <div class="panel-heading">
              <%=form_tag("/candidate/search",:remote=> true,:class=>"form-inline") do%>
              <%= search_field_tag :candidate_search,"",:class=>"form-group"%>
             <%= submit_tag :search,:class=>"btn btn-default btn-sm",:id=>"search_submit"%>
              <%end%>
           </div>
           <div id="results_pannel"></div>
           </div>
         </div>
       


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Candidate Details</h4>
      </div>
      <div class="modal-body" id="modal_body">
        
       </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

    



       
        <div class="row">
          <div class="panel panel-success">
            <div class="row">
       <% flash.each do |name, msg| %>
            
                               <div class="alert alert-info alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                <%=msg%>
                                 <%=name%>
                                 </div>
                    <% end %> 
              <%=flash[:update_notices]%>
            
            </div>
            
               <table class="table table-hover">
                   <div class="panel-heading">All Candidate Details </div>
                   <thead><tr>
                     <th>Name</th><th>Skills</th><th>Location</th><th>Visa Status</th><th>Current Status</th><th>Phone</th><th>Email</th><th>Overall Exp</th><th>Relavent exp</th><th>Current CTC</th><th>Expected CTC</th><th></th><th></th>
                    </tr></thead>
          
                   <tbody>
                       <%@allresumes.each do |resume|%>
                         <tr>
                           <td><%= resume.candidate_name%></td><td><%= resume.skills%></td><td><%= resume.location%></td><td><%= resume.visa_status%></td> <td><%= resume.current_status%></td> <td><%= resume.phone%></td> <td><%= resume.email%></td> <td><%= resume.overall_experience%></td> <td><%= resume.relevant_experience%></td><td><%= resume.current_ctc%></td><td><%= resume.expected_ctc%></td>
                           <td><div class="record_edit" data-record='<%= resume.id%>'><a class="btn btn-warning btn-sm" ><span class="glyphicon glyphicon-edit"></span></a></div></td>
                           <td><a class="btn btn-success btn-sm" download="true" href='<%= resume.filerack.datafile.url%>'><span class="glyphicon glyphicon-arrow-down"></span></a></td>
                           <td><div class="record_delete" data-number='<%= resume.id%>'><button class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></button></div></td>
                           <td><div class="details_view" data-record='<%= resume.id%>'  data-toggle="modal"><button class="btn btn-info btn-sm"><span class="glyphicon glyphicon-info-sign"></span></button></div></td>
                         </tr>
                       <%end%>
                   </tbody>
               </table>
             
      </div>
          <div class='row'> <div class="col-md-8 col-md-offset-4"> <%= paginate @allresumes %></div></div>
          
   </div>
  </div>
 </div>
  
   <!--Well- End -->
