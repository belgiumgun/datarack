 <div class="row">
    <!-- Side bar Start-->
   <div class="col-md-12">
      <ul class="nav nav-tabs " id="list_sidebar">
        <li id="db_sidebar" class="active"><a  href="/home">Candidates DB</a></li>
        <li id="form_sidebar"><a  href="/candidate_form">Upload form</a></li>
      </ul>
