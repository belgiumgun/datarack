  <%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %>

  <%= f.label :password %><br />
  <%= f.password_field :password %>

  <% if devise_mapping.rememberable? %>
   <%= f.check_box :remember_me %> <%= f.label :remember_me %>
  <% end %>

  
    <input type="submit" class="success large button">
<% end %>
